void customermenu()
{
    int c;
    char choice='y';
    do
    {
        cout<<"OPTIONS:"<<endl;
        cout<<"1.Rent a movie"<<endl;
        cout<<"2.Return a movie"<<endl;
        cin>>c;
        switch(c)
        {
            case 1: rentmovie();
                    break;
            case 2: returnmovie();
                    break;
            default:cout<<"Wrong input! Please input numbers 1 or 2 only."<<endl;
                    break;
        }
    cout<<"Do you want to continue? y or n"<<endl;
    cin>>choice;
    }
    while(choice=='y'||choice=='Y');
}

